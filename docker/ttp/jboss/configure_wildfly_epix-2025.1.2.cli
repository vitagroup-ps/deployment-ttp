end-if

if (outcome != "success") of /subsystem=datasources/data-source=EPIXDS:read-resource
    echo \>\>\> add datasources EPIXDS
    data-source add \
        --name=EPIXDS \
        --driver-name=mysql \
        --jndi-name=java:jboss/datasources/EPIXDS \
        --connection-url=jdbc:mysql://$epixDbHost:$epixDbPort/$epixDbName?useSSL=false&allowPublicKeyRetrieval=true \
        --user-name=$epixDbUser \
        --password=$epixDbPass \
        --use-ccm=true \
        --min-pool-size=0 \
        --max-pool-size=20 \
        --flush-strategy=FailingConnectionOnly \
        --use-java-context=true \
        --jta=true \
        --enabled=true \
        --check-valid-connection-sql="select 1" \
        --validate-on-match=false \
        --background-validation=true \
        --background-validation-millis=10000
end-if


# add logger
#############
#>available-env< TTP_LOG_PATTERN %d %-5p [%c] (%t) %s%E%n
set logPattern="%d %-5p [%c] (%t) %s%E%n"
if (outcome == "success") of :resolve-expression(expression=${env.TTP_LOG_PATTERN})
	set logPattern=${env.TTP_LOG_PATTERN}
end-if
#>available-env< TTP_EPIX_LOG_PATTERN TTP_LOG_PATTERN
if (outcome == "success") of :resolve-expression(expression=${env.TTP_EPIX_LOG_PATTERN})
	set logPattern=${env.TTP_EPIX_LOG_PATTERN}
end-if

set logLevel="INFO"
if (outcome == "success") of :resolve-expression(expression=${env.TTP_LOG_LEVEL})
	set logLevel=${env.TTP_LOG_LEVEL}
end-if
#>deprecated-env< EPIX_LOG_LEVEL TTP_EPIX_LOG_LEVEL
if (outcome == "success") of :resolve-expression(expression=${env.EPIX_LOG_LEVEL})
	set logLevel=${env.EPIX_LOG_LEVEL}
end-if
#>available-env< TTP_EPIX_LOG_LEVEL INFO
if (outcome == "success") of :resolve-expression(expression=${env.TTP_EPIX_LOG_LEVEL})
	set logLevel=${env.TTP_EPIX_LOG_LEVEL}
end-if
if (result ~= "(?i)(trace|debug|info|warn|error|fatal)") of :resolve-expression(expression=$logLevel)
	echo \>\>\> set epix-logger to level $logLevel
else
	echo \<\<\< given loglevel not allowed ($logLevel), set INFO
	set logLevel="INFO"
end-if

set logTo="console"
if (outcome == "success") of :resolve-expression(expression=${env.TTP_LOG_TO})
	set logTo=${env.TTP_LOG_TO}
end-if
#>deprecated-env< EPIX_FILE_LOG TTP_EPIX_LOG_TO
if (result ~= "(?i)(on|true|yes|1)") of :resolve-expression(expression=${env.EPIX_FILE_LOG})
    set logTo="file"
end-if
if (result ~= "(?i)(off|false|no|0)") of :resolve-expression(expression=${env.EPIX_FILE_LOG})
    set logTo="console"
end-if
#>deprecated-env< TTP_EPIX_LOG_TO_FILE TTP_EPIX_LOG_TO
if (result ~= "(?i)(on|true|yes|1)") of :resolve-expression(expression=${env.TTP_EPIX_LOG_TO_FILE})
    set logTo="file"
end-if
if (result ~= "(?i)(off|false|no|0)") of :resolve-expression(expression=${env.TTP_EPIX_LOG_TO_FILE})
    set logTo="console"
end-if
#>available-env< TTP_EPIX_LOG_TO CONSOLE
if (outcome == "success") of :resolve-expression(expression=${env.TTP_EPIX_LOG_TO})
	set logTo=${env.TTP_EPIX_LOG_TO}
end-if
if (outcome != "success") of /subsystem=logging/logger=org.emau.icmvc.ttp.epix:read-resource
    /subsystem=logging/logger=org.emau.icmvc.ttp.epix:add(use-parent-handlers=false,handlers=[])
end-if
if (outcome != "success") of /subsystem=logging/logger=org.emau.icmvc.ttp.deduplication:read-resource
    /subsystem=logging/logger=org.emau.icmvc.ttp.deduplication:add(use-parent-handlers=false,handlers=[])
end-if
/subsystem=logging/logger=org.emau.icmvc.ttp.epix:write-attribute(name=level,value=$logLevel)
/subsystem=logging/logger=org.emau.icmvc.ttp.deduplication:write-attribute(name=level,value=$logLevel)
if (result ~= "(?i).*file.*") of :resolve-expression(expression=$logTo)
	echo \>\>\> add epix-logger as separate file (epix.log)
	/subsystem=logging/custom-handler=epix-file-handler:add(class=org.jboss.logmanager.handlers.PeriodicSizeRotatingFileHandler, module=org.jboss.logmanager, formatter=$logPattern, properties={rotateSize=10240000,maxBackupIndex=20,append=true,suffix=".yyyy-MM-dd",fileName="${jboss.server.log.dir}/epix/epix.log"})
    /subsystem=logging/logger=org.emau.icmvc.ttp.epix:add-handler(name="epix-file-handler")
	/subsystem=logging/logger=org.emau.icmvc.ttp.deduplication:add-handler(name="epix-file-handler")
end-if
if (result ~= "(?i).*console.*") of :resolve-expression(expression=$logTo)
	echo \>\>\> add epix-logger to console
	/subsystem=logging/console-handler=epix-console-handler:add(named-formatter=COLOR-PATTERN)
    /subsystem=logging/logger=org.emau.icmvc.ttp.epix:add-handler(name="epix-console-handler")
	/subsystem=logging/logger=org.emau.icmvc.ttp.deduplication:add-handler(name="epix-console-handler")
end-if


