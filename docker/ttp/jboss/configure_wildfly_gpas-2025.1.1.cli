	set gpasDbUser=${env.TTP_GPAS_DB_USER}
end-if

set gpasDbPass=gpas_password
#>available-env< TTP_DB_PASS
if (outcome == "success") of :resolve-expression(expression=${env.TTP_DB_PASS})
	set gpasDbPass=${env.TTP_DB_PASS}
end-if
#>deprecated-env< GPAS_DB_PASS TTP_GPAS_DB_PASS
if (outcome == "success") of :resolve-expression(expression=${env.GPAS_DB_PASS})
